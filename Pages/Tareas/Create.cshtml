@page
@model TaskAPP.Pages.Tareas.CreateModel

@{
    ViewData["Title"] = "Crear";
}
<div class="CrearTarea">
    <h1>Create</h1>

    <h4>Tarea</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Tarea.Title" class="control-label">Titulo</label>
                    <input asp-for="Tarea.Title" class="form-control" />
                    <span asp-validation-for="Tarea.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tarea.Description" class="control-label">Descripción</label>
                    <input asp-for="Tarea.Description" class="form-control" />
                    <span asp-validation-for="Tarea.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tarea.DeliveryDate" class="control-label">Dia Entrega</label>
                    <input asp-for="Tarea.DeliveryDate" class="form-control" />
                    <span asp-validation-for="Tarea.DeliveryDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <button class="btn btn-dark mt-3">
            <a asp-page="Index" class="text-white">Regresar</a>
        </button>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
