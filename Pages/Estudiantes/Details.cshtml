@page
@model TaskAPP.Pages.Estudiantes.DetailsModel

@{
    ViewData["Title"] = "Details";
} 
<div class="DetalleEstudiante pt-5">
    <h1>Details</h1>

    <div>
        <h4>Estudiante</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Estudiante.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Estudiante.Name)
            </dd>
            <dt class="col-sm-2">
                Detalles Tarea
            </dt>
            <dd class="col-sm-10">
                @foreach (var item in Model.Tarea)
                {
                    if (item.Id == Model.Estudiante.IdTarea)
                    {
                        @Html.DisplayFor(model => item.Description)
                    }
                }
            </dd>
        </dl>
    </div>
    <div>
        <button class="btn btn-primary">
            <a class="text-white" asp-page="./Edit" asp-route-id="@Model.Estudiante.Id">Edit</a>
        </button>
        <button class="btn btn-dark">
            <a asp-page="./Index">Regresar</a>
        </button>
    </div>
</div>

