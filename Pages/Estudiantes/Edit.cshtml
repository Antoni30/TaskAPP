@page
@model TaskAPP.Pages.Estudiantes.EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="EditEstudiante pt-5">
    <h1>Edit</h1>

    <h4>Estudiante</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Estudiante.Id" />
                <div class="form-group">
                    <label asp-for="Estudiante.Name" class="control-label">Nombre</label>
                    <input asp-for="Estudiante.Name" class="form-control" />
                    <span asp-validation-for="Estudiante.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estudiante.IdTarea" class="control-label">Tarea</label>
                    <select asp-for="Estudiante.IdTarea" class="form-control">
                        <!-- Opciones del dropdown -->
                        @foreach (var item in Model.Tarea)
                        {
                            <option value="@item.Id">@item.Title</option>
                        }
                        <!-- Agrega más opciones según sea necesario -->
                    </select>
                    <span asp-validation-for="Estudiante.IdTarea" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <button class="mt-2 btn btn-dark">
            <a asp-page="./Index">Regresar</a>
        </button>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
